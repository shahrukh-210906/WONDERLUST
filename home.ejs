<% layout('layouts/boilerplate') %>

<section class="hero-section d-flex align-items-center justify-content-center text-center text-white mx-auto my-5" 
         style="
           background: url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?q=80&w=2021&auto=format&fit=crop') center/cover no-repeat;
           min-height: 70vh;
           border-radius: 2rem;
           box-shadow: 0 10px 30px rgba(0,0,0,0.5);
           position: relative;
           max-width: 1200px;
         ">

  <!-- Overlay for readability -->
  <div style="position:absolute; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.4); border-radius: 2rem;"></div>
  
  <!-- Content -->
  <div class="position-relative" style="z-index: 2; padding: 2rem;">
    <h1 class="display-4 fw-bold mb-3">Discover Your Next Adventure</h1>
